-- recursion example --

var:fn print, (([] (n {} num)) & ; []
    (io:puts (number:to_string ($ n))),
    ((($ n) = 0) |->
        ; r good.
        , ; print (($ n) - 1).
    ).
)

var:fn factorial, (([] (n {} num)) & ; []
    (io:puts ($ n)),
    ($ n) * (
       (($ n) = 0) |-> ; 0 + 1., ; factorial (($ n) - 1).
    ).
)

io:puts (number:to_string (factorial 5)) -- 120
